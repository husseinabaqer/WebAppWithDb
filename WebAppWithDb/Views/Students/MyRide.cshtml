@model WebAppWithDb.Models.StudentRideVM
@{
    ViewData["Title"] = "My Ride";
}

<div class="rounded-4 shadow-sm p-4 p-md-5 bg-dark text-white">
    <h1 class="fw-bold mb-4">@ViewData["Title"]</h1>

    @if (!Model.HasRide)
    {
        <div class="alert bg-secondary text-white border-0 d-flex justify-content-between align-items-center">
            <span>You don’t have an accepted ride yet.</span>
            <a asp-controller="Search" asp-action="Index" class="btn btn-brand ms-3">Find a Ride</a>
        </div>
    }
    else
    {
        <div class="card bg-dark text-white border-secondary">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start flex-wrap gap-2">
                    <div class="pe-3">
                        <h4 class="card-title mb-1">@Model.DriverName</h4>
                        <div class="small text-white-50 mb-3">@Model.Route</div>

                        <dl class="row mb-0">
                            <dt class="col-sm-3">Car</dt>
                            <dd class="col-sm-9">@Model.Car</dd>

                            <dt class="col-sm-3">Gender Policy</dt>
                            <dd class="col-sm-9">@Model.GenderPolicy</dd>

                            <dt class="col-sm-3">Seats Left</dt>
                            <dd class="col-sm-9">@Model.SeatsLeft</dd>
                        </dl>
                    </div>

                </div>
            </div>
        </div>
    }
</div>
