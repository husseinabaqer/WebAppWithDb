@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebAppWithDb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebAppWithDb.styles.css" asp-append-version="true" />
</head>
<body class="bg-brand">


    <header class="p-3 bg-dark text-white">
        <div class="container">
            <!-- NOTE: 'container' (not container-fluid) for left/right space -->
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">

                <!-- Brand -->
                <a asp-area="" asp-controller="Home" asp-action="Index"
                   class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none fw-bold">
                    RIDES
                </a>

                <!-- Left nav (role-aware) -->
                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0 ms-lg-3 fs-5">
                    @if (SignInManager.IsSignedIn(User) && User.IsInRole("Driver"))
                    {
                        <li><a class="nav-link px-10 text-white" asp-controller="Drivers" asp-action="Create">Offer</a></li>
                        <li><a class="nav-link px-10 text-white" asp-controller="Requests" asp-action="Inbox">Requests</a></li>
                        <li><a class="nav-link px-10 text-white" asp-controller="Drivers" asp-action="Students">Students</a></li>
                    }
                    else if (SignInManager.IsSignedIn(User) && User.IsInRole("Student"))
                    {
                        <li><a class="nav-link px-10 text-white" asp-controller="Search" asp-action="Index">Find a Ride</a></li>
                        <li><a class="nav-link px-10 text-white" asp-controller="Students" asp-action="MyRide">My Ride</a></li>
                        <li><a class="nav-link px-10 text-white" asp-controller="Students" asp-action="Profile">Profile</a></li>
                    }
                    else if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                    {
                        <li><a class="nav-link px-10 text-white" asp-area="Admin" asp-controller="AdminDashboard" asp-action="Index">Admin</a></li>
                    }
                    else
                    {
                        <li><a class="nav-link px-10 text-white" asp-controller="Home" asp-action="Index">Home</a></li>
                    }
                </ul>

                <!-- Right side: login/register (buttons), or hello + logout -->
                <div class="text-end">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </div>
    </header>


    <div class="container my-4">
        <div class="row justify-content-center">
            <div class="col-12 col-md-11 col-lg-10 col-xl-9">
                <!-- was: <div class="card shadow-sm"> -->
                <div class="card shadow-sm border-0 bg-soft-brand">
                    <div class="card-body">
                        @RenderBody()  <!-- or your page-specific content -->
                    </div>
                </div>
            </div>
        </div>
    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - WebAppWithDb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
