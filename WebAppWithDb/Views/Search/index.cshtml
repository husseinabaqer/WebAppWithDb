@model WebAppWithDb.Models.SearchResultsVM
@{
    ViewData["Title"] = "Find a Ride";
}
<h2>Find a Ride</h2>
@if (TempData["Toast"] is string t)
{
    <div class="alert alert-info">@t</div>
}

<form method="get" class="row g-2 mb-3 ">
    <div class="col-md-3"><input class="form-control" placeholder="City" name="City" value="@Model.Filters.City" /></div>
    <div class="col-md-3"><input class="form-control" placeholder="Destination" name="Destination" value="@Model.Filters.Destination" /></div>
    <div class="col-md-3">
        <select class="form-select" name="GenderPolicy">
            <option value="">Any Gender</option>
            <option value="Both" selected="@("Both" == Model.Filters.GenderPolicy)">Both</option>
            <option value="MaleOnly" selected="@("MaleOnly" == Model.Filters.GenderPolicy)">Male only</option>
            <option value="FemaleOnly" selected="@("FemaleOnly" == Model.Filters.GenderPolicy)">Female only</option>
        </select>
    </div>
    <div class="col-md-2"><input class="form-control" placeholder="Car type" name="CarType" value="@Model.Filters.CarType" /></div>
    <div class="col-md-1"><button class="btn btn-primary w-100" type="submit">Search</button></div>
</form>

@if (!Model.Results.Any())
{
    <div class="alert alert-light">No offers yet.</div>
}
else
{
    <table class="table table-hover">
        <thead><tr><th>Driver</th><th>Route</th><th>Car</th><th>Policy</th><th>Seats</th><th>Phone</th><th></th></tr></thead>
        <tbody>
            @foreach (var r in Model.Results)
            {
                <tr>
                    <td>@r.DriverName</td>
                    <td>@r.Route</td>
                    <td>@r.Car</td>
                    <td>@r.GenderPolicy</td>
                    <td>@r.AvailableSeats</td>
                    <td>@r.PhoneNumber</td>
                    <td>
                        <form asp-controller="Requests" asp-action="Create" method="post">
                            <input type="hidden" name="driverId" value="@r.DriverId" />
                            <button class="btn btn-sm btn-success">Send Request</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
