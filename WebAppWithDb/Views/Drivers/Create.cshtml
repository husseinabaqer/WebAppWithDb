@model WebAppWithDb.Models.DriverOfferForm
@{
    ViewData["Title"] = "Create Offer";
}

<div class="rounded-4 shadow-sm p-4 p-md-5 bg-dark text-white">
    <h1 class="fw-bold mb-4">@ViewData["Title"]</h1>

    @if (TempData["Toast"] is string t1)
    {
        <div class="alert alert-info border-0">@t1</div>
    }

    <form asp-action="Create" method="post" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-warning mb-3"></div>

        <div class="row">
            <div class="col-md-6">
                <h5 class="mb-3">Driver</h5>

                <div class="mb-3">
                    <label asp-for="FullName" class="form-label text-white"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-warning small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DriverCity" class="form-label text-white"></label>
                    <input asp-for="DriverCity" class="form-control" />
                    <span asp-validation-for="DriverCity" class="text-warning small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Destination" class="form-label text-white"></label>
                    <input asp-for="Destination" class="form-control" />
                    <span asp-validation-for="Destination" class="text-warning small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CoveredCitiesCsv" class="form-label text-white">
                        Covered Cities (comma-separated)
                    </label>
                    <input asp-for="CoveredCitiesCsv" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="OfferDescription" class="form-label text-white"></label>
                    <textarea asp-for="OfferDescription" class="form-control" rows="3"></textarea>
                </div>
            </div>

            <div class="col-md-6">
                <h5 class="mb-3">Car</h5>

                <div class="mb-3">
                    <label asp-for="CarBrand" class="form-label text-white"></label>
                    <input asp-for="CarBrand" class="form-control" />
                    <span asp-validation-for="CarBrand" class="text-warning small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CarType" class="form-label text-white"></label>
                    <input asp-for="CarType" class="form-control" />
                    <span asp-validation-for="CarType" class="text-warning small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CarModel" class="form-label text-white"></label>
                    <input asp-for="CarModel" class="form-control" />
                    <span asp-validation-for="CarModel" class="text-warning small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CarSeats" class="form-label text-white"></label>
                    <input asp-for="CarSeats" type="number" min="3" max="14" class="form-control" />
                    <span asp-validation-for="CarSeats" class="text-warning small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CarNumber" class="form-label text-white"></label>
                    <input asp-for="CarNumber" class="form-control" />
                    <span asp-validation-for="CarNumber" class="text-warning small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="GenderPolicy" class="form-label text-white"></label>
                    <select asp-for="GenderPolicy" class="form-select">
                        <option>Both</option>
                        <option>MaleOnly</option>
                        <option>FemaleOnly</option>
                    </select>
                </div>
            </div>
        </div>

        <button class="btn btn-brand w-100 mt-2" type="submit">Save Offer</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
