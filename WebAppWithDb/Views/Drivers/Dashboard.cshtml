@model WebAppWithDb.Models.DriverDashboardVM
@{
    ViewData["Title"] = "Driver Dashboard";
}

<div class="rounded-4 shadow-sm p-4 p-md-5 bg-dark text-white">
    <h1 class="fw-bold mb-4">@ViewData["Title"]</h1>

    @if (TempData["Toast"] is string t)
    {
        <div class="alert alert-success border-0">@t</div>
    }

    <div class="row g-4">
        <div class="col-lg-5">
            <div class="card bg-dark text-white border-secondary h-100">
                <div class="card-body">
                    <h4 class="card-title mb-1">@Model.FullName</h4>
                    <div class="small text-white-50 mb-3">
                        @(Model.Cities?.Any() == true
                                                ? string.Join(", ", Model.Cities) + " \u2192 " + (Model.Destination ?? "")
                                                : $"{Model.DriverCity} \u2192 {Model.Destination}")
                    </div>

                    <dl class="row mb-0">
                        <dt class="col-5">Seats</dt>
                        <dd class="col-7">@Model.AvailableSeats / @Model.CarSeats</dd>

                        <dt class="col-5">Covered Cities</dt>
                        <dd class="col-7">@(Model.Cities.Any() ? string.Join(", ", Model.Cities) : "—")</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-lg-7">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="card bg-dark text-white border-secondary text-center h-100">
                        <div class="card-body">
                            <div class="display-6 fw-bold">@Model.PendingCount</div>
                            <div class="text-white-50">Pending</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-dark text-white border-secondary text-center h-100">
                        <div class="card-body">
                            <div class="display-6 fw-bold">@Model.AcceptedCount</div>
                            <div class="text-white-50">Accepted</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex flex-wrap gap-2 mt-3">
                <a class="btn btn-brand" asp-action="Create">Edit Ride Details</a>
                <a class="btn btn-outline-light" asp-controller="Requests" asp-action="Inbox">Requests</a>
            </div>
        </div>
    </div>
</div>
