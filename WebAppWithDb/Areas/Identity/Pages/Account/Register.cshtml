@page
@model WebAppWithDb.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="py-4" style="background-color:#212529;">
    <div class="container">
        <div class="row justify-content-center">
            <!-- SAME WIDTH AS YOUR OTHER PAGES -->
            <div class="col-12 col-md-11 col-lg-10 col-xl-9">

                <!-- SINGLE PANEL (no inner box) -->
                <div class="rounded-4 shadow-sm p-4 p-md-5 bg-dark text-white">

                    <h1 class="fw-bold text-uppercase mb-4">@ViewData["Title"]</h1>

                    <form method="post" asp-route-returnUrl="@Model.ReturnUrl" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Role" class="form-label text-white-50"></label>
                            <select asp-for="Input.Role" class="form-select form-select-lg bg-dark text-white border-secondary">
                                <option value="Student">Student</option>
                                <option value="Driver">Driver</option>
                            </select>
                            <span asp-validation-for="Input.Role" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.FullName" class="form-label text-white-50"></label>
                            <input asp-for="Input.FullName" class="form-control form-control-lg bg-dark text-white border-secondary" />
                            <span asp-validation-for="Input.FullName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.PhoneNumber" class="form-label text-white-50"></label>
                            <input asp-for="Input.PhoneNumber" class="form-control form-control-lg bg-dark text-white border-secondary" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label text-white-50"></label>
                            <input asp-for="Input.Email" class="form-control form-control-lg bg-dark text-white border-secondary" autocomplete="username" />
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label text-white-50"></label>
                            <input asp-for="Input.Password" class="form-control form-control-lg bg-dark text-white border-secondary" autocomplete="new-password" />
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Input.ConfirmPassword" class="form-label text-white-50"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg bg-dark text-white border-secondary" autocomplete="new-password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <button class="btn btn-outline-light btn-lg w-100" type="submit">Sign up</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
