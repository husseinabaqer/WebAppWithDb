@page
@model WebAppWithDb.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<section class="py-4" style="background-color:#212529;">
  <div class="container">
    <div class="row justify-content-center">
      <!-- SAME WIDTH AS YOUR OTHER PAGES -->
      <div class="col-12 col-md-11 col-lg-10 col-xl-9">

        <!-- SINGLE PANEL (no inner box) -->
        <div class="rounded-4 shadow-sm p-4 p-md-5 bg-dark text-white">

          <h1 class="fw-bold text-uppercase mb-4">@ViewData["Title"]</h1>

          <form method="post" asp-route-returnUrl="@Model.ReturnUrl" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
              <label asp-for="Input.Email" class="form-label text-white-50"></label>
              <input asp-for="Input.Email"
                     class="form-control form-control-lg bg-dark text-white border-secondary"
                     autocomplete="username" />
              <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <div class="mb-2">
              <label asp-for="Input.Password" class="form-label text-white-50"></label>
              <input asp-for="Input.Password"
                     class="form-control form-control-lg bg-dark text-white border-secondary"
                     autocomplete="current-password" />
              <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>

            <div class="form-check mb-4">
              <input class="form-check-input" asp-for="Input.RememberMe" />
              <label class="form-check-label text-white-50" asp-for="Input.RememberMe"></label>
            </div>

            <button class="btn btn-outline-light btn-lg w-100" type="submit">Login</button>

            <div class="d-flex justify-content-between mt-3">
              <a class="link-light link-opacity-75-hover small" asp-page="./ForgotPassword">Forgot password?</a>
              <a class="link-light link-opacity-75-hover small" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create account</a>
            </div>
          </form>

        </div>
      </div>
    </div>
  </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
